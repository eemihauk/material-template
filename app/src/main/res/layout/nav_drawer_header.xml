<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_drawer_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_header_height"
    android:layout_gravity="start"
    android:paddingBottom="@dimen/nav_drawer_vertical_padding"
    android:paddingLeft="@dimen/nav_drawer_horizontal_padding"
    android:paddingRight="@dimen/nav_drawer_horizontal_padding"
    android:background="?attr/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_drawer_user_info_height"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/nav_drawer_header_info_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_info_text"
            android:textStyle="bold"
            android:textSize="@dimen/default_text_size"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/nav_drawer_header_info_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_drawer_header_info_1"
            android:text="@string/user_info_text"
            android:textSize="@dimen/default_text_size"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>